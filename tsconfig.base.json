{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noPropertyAccessFromIndexSignature": false,
    "importHelpers": false,
    "target": "es2016",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@codegen": ["libs/codegen/src/index.ts"],
      "@external/module": ["libs/external/module/src/index.ts"],
      "@seniorlove/app/*": ["apps/seniorlove/app/*"],
      "@seniorlove/backend/*": ["apps/seniorlove/backend/*"],
      "@seniorlove/frontend/*": ["apps/seniorlove/frontend/*"],
      "@localjobs/backend/*": ["apps/localjobs/backend/*"],
      "@localjobs/frontend/*": ["apps/localjobs/frontend/*"],
      "@shared/assets": ["libs/shared/assets/src/index.ts"],
      "@shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@shared/module": ["libs/shared/module/src/index.ts"],
      "@shared/module/*": ["libs/shared/module/src/*"],
      "@shared/test-client": ["libs/shared/test-client/src/index.ts"],
      "@shared/test-server": ["libs/shared/test-server/src/index.ts"],
      "@shared/ui-web": ["libs/shared/ui-web/src/index.ts"],
      "@shared/ui-web/*": ["libs/shared/ui-web/src/*"],
      "@shared/util": ["libs/shared/util/src/index.ts"],
      "@shared/util-client": ["libs/shared/util-client/src/index.ts"],
      "@shared/util-client/*": ["libs/shared/util-client/src/*"],
      "@shared/util-server": ["libs/shared/util-server/src/index.ts"],
      "@social/data-access": ["libs/social/data-access/src/index.ts"],
      "@social/module": ["libs/social/module/src/index.ts"],
      "@social/ui-web": ["libs/social/ui-web/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
